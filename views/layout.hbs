<body>

  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <a class="navbar-brand font-bold" href="#">{{title}}</a>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02"
      aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>



    <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
      <ul class="navbar-nav mr-auto mt-2 mt-lg-0">


        <li class="nav-item active">
          <a class="nav-link" href="/">News</a>
        </li>

        {{#ifEquals user.status "confirmed"}}
        {{#ifEquals user.role "admin"}}
        <li class="nav-item active">
          <a class="nav-link" href="/addArticle">Add an article</a>
        </li>
        {{/ifEquals}}


        <li class="nav-item active">
          <a class="nav-link" href="/profile/{{user.id}}">Profile page</a>
        </li>
        <li class="nav-item active">
          <a class="nav-link" href="/editProfile">Edit my profile</a>
        </li>
        <li class="nav-item active">
          <a class="nav-link" href="/profileList">Search Users</a>
        </li>
        <li class="nav-item active">
          <a class="nav-link" href="/auth/logout">Logout</a>
        </li>
        {{/ifEquals}}



        {{#unless user}}
        <li class="nav-item active">
          <a class="nav-link" href="/auth/login">Login</a>
        </li>
        <li class="nav-item active">
          <a class="nav-link" href="/auth/signup">Signup</a>
        </li>
        {{/unless}}
        {{#ifEquals user.status "not-confirmed"}}
        <li class="nav-item active">
          <a class="nav-link" href="/auth/logout">Logout</a>
        </li>
        {{/ifEquals}}

        <form class="form-inline my-2 my-lg-0">
        <input class="form-control mr-sm-2" type="search" placeholder="Search">
        {{!-- <button class="btn btn-outline-light my-2 my-sm-0" type="submit">Search</button> --}}
      </form>


      </ul>

    </div>
  </nav>

